@model IEnumerable<MVC_EF_SQLSERVE.Models.Customer>

@{
    ViewBag.Title = "客户查询";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>客户查询</h2>

<p>
    @Html.ActionLink("新增", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comments)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "GoToSales", new { id = item.CustomerID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comments)
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id=item.CustomerID }) |
            @*@Html.ActionLink("详细", "Details", new { id=item.CustomerID }) |*@
            @Html.ActionLink("删除", "Delete", new { id=item.CustomerID })
        </td>
    </tr>
}

</table>
